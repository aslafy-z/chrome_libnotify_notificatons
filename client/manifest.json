{
   "manifest_version": 2,
   "name": "Libnotify Notifications in Chrome",
   "version": "1.1",
   "homepage_url": "https://drive.google.com/folderview?id=0BzOewlVTs_tpek54TDVNbFFxWlk&usp=sharing",
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "load_hook.js" ],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
   } ],
   "web_accessible_resources": [
      "notify_hook.js"
   ],
   "background": { "scripts": ["load_notify.js"] },
   "description": "Properly support libnotify notifications in Chrome.",
   "icons": {
      "128": "img/icon_128.png",
      "48": "img/icon_48.png"
   },
   "permissions": [ "notifications", "nativeMessaging", "tabs", "http://*/*", "https://*/*" ]
}
